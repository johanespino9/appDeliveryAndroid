        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!-- Bot贸n Carrito (Izquierda) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCarrito"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/carrito_compras"
                android:padding="8dp"
                android:tint="@color/red" />

            <!-- Bot贸n Pedidos (Centro) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPedidos"
                android:layout_width="56dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/pedidos"
                android:padding="8dp"
                android:tint="@color/red" />

            <!-- Bot贸n Cerrar Sesi贸n (Derecha) -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCerrarSesion"
