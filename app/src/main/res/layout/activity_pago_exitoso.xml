<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".PagoExitoso">

    <!-- Texto en el centro de la pantalla -->
    <TextView
        android:id="@+id/centerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago Exitoso"
        android:textSize="24sp"
        android:textColor="@color/orange"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_extrabold"
        app:layout_constraintBottom_toTopOf="@+id/centerImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Imagen debajo del texto -->
    <ImageView
        android:id="@+id/centerImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/pago_exitoso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centerTextView" />

    <!-- BotÃ³n en la parte inferior -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonVolverHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/layout_background_rounded_red"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Continuar"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>






